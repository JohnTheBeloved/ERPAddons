<odoo>
  <template id="last_chance_to_buy" inherit_id="diza_home" name="Last Chance products">
    <data inherit_id="diza_home">
        <xpath expr="//*[@id='after_last_chance_to_buy']" position="before">
            <div class="elementor-element elementor-element-1629d36 elementor-product-vertical-v1 elementor-widget elementor-widget-tbay-products"
                data-id="1629d36" data-element_type="widget" data-widget_type="tbay-products.default">
                <div class="elementor-widget-container">
                    <div class="tbay-element tbay-element-products">
                        <h3 class="heading-tbay-title">
                            <span class="title">
                                <span class="title-child">
                                    Last chance to buy
                                    <i class="tb-icon tb-icon-plus-sub"></i>
                                </span>
                            </span>
                        </h3>

                        <div class="products row grid products" data-xlgdesktop="3" data-desktop="3" data-desktopsmall="3"
                            data-tablet="3" data-landscape="2" data-mobile="2">
                            <t t-foreach="last_chance_product_group.product_ids" t-as="product">
                                <t t-set="product_href" t-value="keep('/shop/product/%s' % slug(product), None)" />
                                <div class="item">
                                    <div class="product-block product vertical-v1" data-product-id="718">
                                        <div class="product-content">
                                            <div class="block-inner">
                                                <figure class="image">
                                                    <a href="//product/constipation-medication/">
                                                        <img width="280" height="280"
                                                            src="data:image/svg+xml,%3Csvg%20xmlns='http://www.w3.org/2000/svg'%20viewBox='0%200%20280%20280'%3E%3C/svg%3E"
                                                            class="attachment-woocommerce_thumbnail size-woocommerce_thumbnail" alt=""
                                                            data-lazy-src="/theme_diza/static/img/diza/07/product-57-280x280.jpg" /><noscript><img
                                                                width="280" height="280"
                                                                src="/theme_diza/static/img/diza/07/product-57-280x280.jpg"
                                                                class="attachment-woocommerce_thumbnail size-woocommerce_thumbnail"
                                                                alt="" /></noscript>
                                                    </a>
                                                </figure>
                                            </div>
                                            <div class="caption">
                                                <h3 class="name">
                                                    <a href="//product/constipation-medication/"><t t-esc="product.name"/></a>
                                                </h3>

                                                <span class="price"><span class="woocs_price_code" data-product-id="718"><span
                                                            class="woocommerce-Price-amount amount"><bdi><span
                                                                    class="woocommerce-Price-currencySymbol">
                                                                        <t t-esc="product.list_price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                                    </span>
                                                                    </bdi>
                                                        </span>
                                                    </span>
                                                </span>

                                                <div class="rating">
                                                    <div class="star-rating" role="img" aria-label="Rated 5.00 out of 5">
                                                        <span style="width: 100%;">Rated
                                                            <strong class="rating">5.00</strong>
                                                            out of 5</span>
                                                    </div>
                                                    <div class="count">
                                                        <span>(1)</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </data>
  </template>
</odoo>